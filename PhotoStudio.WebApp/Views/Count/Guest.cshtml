
@{
    ViewBag.Title = "Guest";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string page = ViewBag.btn;
}
@using PhotoStudio.Common;
@using PhotoStudio.Model;
<div class="padding-md">
    <div class="col-sm-12">
        <div class="page-title active">
            客户档案
        </div>
    </div>
</div>
<div class="col-md-12 text-right text-left-md p-top-md">
    <div class="search-input-wrapper">
        <div class="search-input">
            @using (Html.BeginForm("Guest", "Count", FormMethod.Post))
            {

                @Html.TextBox("name", "", new { @class = "form-control input-md inline-block", @placeholder = "请输入客户姓名" })
                <button type="submit" class="btn btn-default "><i class="ion-ios7-search-strong"></i></button>
            }

        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default weather-widget">
            <div class="panel-body bg-dark text-white">
                <div class="h4 text-white text-center">客户列表</div>
            </div>
            <div class="m-top-md m-bottom-md text-center">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 ">
                        <div class="col-sm-2">客户ID</div>
                        <div class="col-sm-2">客户姓名</div>
                        <div class="col-sm-2">联系电话</div>
                        <div class="col-sm-3">邮箱</div>
                        <div class="col-sm-3">地址</div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 ">
                        <hr style="height:1px;border:none;border-top:1px dashed #7B7B7B;" />
                    </div>

                </div>
                    @if (ViewBag.lCount > 0)
                    {
                        foreach (PhotoStudio.Model.Costomer n in ViewBag.listOrders)
                        {
                            <div class="row">
                                <div class="col-sm-8 col-sm-offset-2 ">
                                    <div class="col-sm-2">@n.ID</div>
                                    <div class="col-sm-2">@n.Name</div>
                                    <div class="col-sm-2">@n.Phone</div>
                                    <div class="col-sm-3">@n.Email</div>
                                    <div class="col-sm-3">@n.Place</div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-8 col-sm-offset-2 ">
                                    <hr style="height:1px;border:none;border-top:1px dashed #7B7B7B;" />
                                </div>

                            </div>
                        }
                        <nav>
                            <ul class="pagination pagination-lg">
                                @MvcHtmlString.Create(PageBar.GetPagebar((int)ViewBag.Index, (int)ViewBag.lCount));
                            </ul>
                        </nav>
                    }
                    else
                    {
                        <div class="h4 text-upper col-sm-8 col-sm-offset-2 ">
                            没有相关记录！！
                        </div>
                    }
                

                </div>
            
            <div class="panel-footer bg-white text-center padding-md">
                <div class="h4 text-upper">by.@ViewBag.UID </div>
                <div class="text-muted font-7 m-top-xs">
                    @DateTime.Now
                </div>
            </div>
        </div><!-- ./panel -->
    </div><!-- ./col -->
</div>
