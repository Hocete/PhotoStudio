
@{
    ViewBag.Title = "Sets";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<div class="padding-md">
    <h2 class="header-text">
        摄影套系
        <span class="sub-header">
            设置
        </span>
    </h2>
    <div>@ViewBag.Content</div>
    <div class="smart-widget m-top-lg widget-dark-blue">
        <div class="smart-widget-header">
            套系添加
            <span class="smart-widget-option">
                <span class="refresh-icon-animated">
                    <i class="fa fa-circle-o-notch fa-spin"></i>
                </span>
                <a href="#" class="widget-toggle-hidden-option">
                    <i class="fa fa-cog"></i>
                </a>
                <a href="#" class="widget-collapse-option" data-toggle="collapse">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </span>
        </div>
        <div class="smart-widget-inner">
            <div class="smart-widget-hidden-section">
                <ul class="widget-color-list clearfix">
                    <li style="background-color:#20232b;" data-color="widget-dark"></li>
                    <li style="background-color:#4c5f70;" data-color="widget-dark-blue"></li>
                    <li style="background-color:#23b7e5;" data-color="widget-blue"></li>
                    <li style="background-color:#2baab1;" data-color="widget-green"></li>
                    <li style="background-color:#edbc6c;" data-color="widget-yellow"></li>
                    <li style="background-color:#fbc852;" data-color="widget-orange"></li>
                    <li style="background-color:#e36159;" data-color="widget-red"></li>
                    <li style="background-color:#7266ba;" data-color="widget-purple"></li>
                    <li style="background-color:#f5f5f5;" data-color="widget-light-grey"></li>
                    <li style="background-color:#fff;" data-color="reset"></li>
                </ul>
            </div>
            <div class="smart-widget-body">
                @using (Html.BeginForm("Sets", "Home", FormMethod.Post, new { @class = "form-horizontal ", @enctype = "multipart/form-data" }))
                {
                    @Html.TextBox("active", "2", new { @type = "hidden" })
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">套系名称</label>
                                    @Html.TextBox("name", "", new { @class = "col-md-6 form-control", @placeholder = "name" })
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">所属类型 </label>
                                    @Html.TextBox("types", "", new { @class = "col-md-6 form-control", @placeholder = "Type" })
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">价格</label>
                                    @Html.TextBox("price", "", new { @class = "col-md-6 form-control", @placeholder = "price" })
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">相片</label>
                                    @Html.TextBox("photo", "", new { @class = "col-md-6 form-control", @type = "file" })
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-5">
                                        <button type="submit" class="btn btn-success">确定添加</button>
                                        <button type="reset" class="btn btn-default">重置</button>
                                    </div>
                                </div>
                }
            </div>
        </div><!-- ./smart-widget-inner -->
    </div><!-- ./smart-widget -->
    <div class="smart-widget widget-purple">
        <div class="smart-widget-header">
            套系修改
            <span class="smart-widget-option">
                <span class="refresh-icon-animated">
                    <i class="fa fa-circle-o-notch fa-spin"></i>
                </span>
                <a href="#" class="widget-toggle-hidden-option">
                    <i class="fa fa-cog"></i>
                </a>
                <a href="#" class="widget-collapse-option" data-toggle="collapse">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </span>
        </div>
        <div class="smart-widget-inner">
            <div class="smart-widget-hidden-section">
                <ul class="widget-color-list clearfix">
                    <li style="background-color:#20232b;" data-color="widget-dark"></li>
                    <li style="background-color:#4c5f70;" data-color="widget-dark-blue"></li>
                    <li style="background-color:#23b7e5;" data-color="widget-blue"></li>
                    <li style="background-color:#2baab1;" data-color="widget-green"></li>
                    <li style="background-color:#edbc6c;" data-color="widget-yellow"></li>
                    <li style="background-color:#fbc852;" data-color="widget-orange"></li>
                    <li style="background-color:#e36159;" data-color="widget-red"></li>
                    <li style="background-color:#7266ba;" data-color="widget-purple"></li>
                    <li style="background-color:#f5f5f5;" data-color="widget-light-grey"></li>
                    <li style="background-color:#fff;" data-color="reset"></li>
                </ul>
            </div>
            <div class="smart-widget-body">
                 @using (Html.BeginForm("Sets", "Home", FormMethod.Post, new { @class = "form-horizontal ", @enctype = "multipart/form-data" }))
                 {
                   @Html.TextBox("active", "1", new { @type="hidden" })
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">套系ID</label>
                                    @Html.DropDownList("ID", (List<SelectListItem>)ViewBag.Letters, new { @class = "col-md-6 form-control" });
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">套系名称</label>
                                    @Html.TextBox("name", "", new { @class = "col-md-6 form-control", @placeholder = "name" })
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">所属类型 </label>
                                    @Html.TextBox("types", "", new { @class = "col-md-6 form-control", @placeholder = "Type" })
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">价格</label>
                                    @Html.TextBox("price", "", new { @class = "col-md-6 form-control", @placeholder = "price" })
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-md-offset-3 text-right">相片</label>
                                    @Html.TextBox("photo", "", new { @class = "col-md-6 form-control", @placeholder = "Email", @type = "file" })
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-5">
                                        <button type="submit" class="btn btn-success">确定修改</button>
                                        <button type="reset" class="btn btn-default">重置</button>
                                    </div>
                                </div>
                 }  
            </div>
        </div><!-- ./smart-widget-inner -->
    </div><!-- ./smart-widget -->
</div>